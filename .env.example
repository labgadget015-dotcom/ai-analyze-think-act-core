# YouTube Intelligence SaaS - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# Flask Application Settings
# ==========================================
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True
HOST=localhost
PORT=5000

# ==========================================
# YouTube API Configuration
# ==========================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
CLIENT_SECRETS_FILE=credentials.json
YOUTUBE_CHANNEL_ID=UC1234567890
YOUTUBE_CLIENT_SECRETS=credentials.json
TOKEN_FILE=youtube_token.pickle

# ==========================================
# Database Configuration (Optional)
# ==========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/youtube_intelligence

# SQLite alternative for development
# DATABASE_URL=sqlite:///./youtube_intelligence.db

# ==========================================
# AI/ML Configuration
# ==========================================
# OpenAI API for advanced recommendations (optional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model selection
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7

# ==========================================
# Email Notifications (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=notifications@yourdomain.com

# ==========================================
# Slack Integration (Optional)
# ==========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==========================================
# Analytics & Monitoring
# ==========================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# Deployment Configuration
# ==========================================
# AWS Lambda settings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Railway/Heroku settings
RAILWAY_ENVIRONMENT=production

# ==========================================
# Feature Flags
# ==========================================
ENABLE_WEEKLY_REPORTS=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SLACK_NOTIFICATIONS=False
ENABLE_ADVANCED_AI=False

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# ==========================================
# Caching Configuration
# ==========================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/youtube_app.log

# ==========================================
# Security Settings
# ==========================================
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com
CORS_ENABLED=True
SECURE_COOKIES=False

# ==========================================
# YouTube API Scopes
# ==========================================
YOUTUBE_SCOPES=https://www.googleapis.com/auth/youtube.readonly,https://www.googleapis.com/auth/youtube.force-ssl

# ==========================================
# Testing Configuration
# ==========================================
TEST_CHANNEL_ID=UC_test_channel_id
TEST_MODE=False
